{
  "name": "react-wordpress-hooks",
  "version": "3.0.0-beta.3",
  "description": "Set of hooks for WordPress REST API",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-wordpress-hooks.cjs.js",
  "module": "lib/react-wordpress-hooks.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "watch": "npm run build -- --watch",
    "deploy": "gh-pages -d .docz/dist",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "docz:dev": "docz dev",
    "docz:build": "docz build --base /react-wordpress-hooks"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-wordpress-hooks.git"
  },
  "keywords": [
    "WordPress",
    "hooks",
    "React",
    "library",
    "REST",
    "API"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/react-wordpress-hooks/issues"
  },
  "homepage": "https://github.com/JB1905/react-wordpress-hooks#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^6.1.0",
    "@types/react": "^16.9.17",
    "@typescript-eslint/parser": "^2.14.0",
    "docz": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "gh-pages": "^2.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rollup-plugin-terser": "^5.1.3",
    "rollup-plugin-typescript2": "^0.25.3",
    "typescript": "^3.7.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
